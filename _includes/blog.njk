---
layout: base.njk
---
<section id="blog" class="py-5 bg-light">
            <div class="container">
                <div class="text-center p-3">
                <h3 class="custom-heading"><strong><a class="none" href="{{page.url}}">{{title}}</a></strong></h3>
            <p>{{description}}</p>    
            </div>
                <div class="row">
                    {% for post in  pagination.items | reverse %}<div class="col-md-4 mb-4">
                        <div class="card h-100 custom-card">
                            <img src="{{post.data.image or metadata.image}}" class="card-img-top custom-blog-img" alt="{{post.title}}" 
                            loading="lazy" width="100%" height="100%">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">{{post.data.title}}</h5>
                                <p class="card-text custom-text-sm flex-grow-1">
                                    {{post.data.description}}</p>
                                <a href="{{post.url}}" 
                                class="mt-auto stretched-link text-decoration-none fw-bold">
                                {{post.data.title}} â†’</a>
                            </div>
                        </div>
                    </div>{% endfor %}
                   <div class="row col-md-12">
<div class="col-md-6 p-3">
{% if pagination.href.previous %}<a class="btn btn-lg btn-dark col-6" href="{{ pagination.href.previous }}">Prev </a>{% endif %}
</div>
<div class="col-md-6 text-end p-3">
{% if pagination.href.next %}<a class="btn btn-lg btn-dark col-6" href="{{ pagination.href.next }}">Next </a>{% endif %}
</div>
</div>
                </div>
            </div>
        </section>
