---
layout: base.njk
---
<div class="container">
<div class="col-md-8 mx-auto p-3 p-md-5 mt-3 text-center">
<h1 class="custom-title">
  <strong><a class="none" href="{{page.url}}">{{title}}</a></strong></h1>
<h2 class="lead">{{description}}</h2>
</div>
{% if image %}<div class="col-md-10 mx-auto"><img class="img-fluid rounded shadow mt-3" alt="{{title}}" width="100%" height="100%"
src="{{image}}"/>{% if image_copyrights %}<p class="ms-3 mt-1"><small>{{image_copyrights}}</small></p>{% endif %}</div>
{% endif %}
<div class="text-start col-md-8 mx-auto mt-5 mb-5 p-3">
{% if show_toc %}<div class="p-3"><h3><strong>{{widget.table_of_content}}</strong></h3>{{ content | toc | safe }}</div>{% endif %}
	<p><small>
Published on: <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>&nbsp;
{%- if author -%}
{%- set authorKeys = author | authorsToArray -%}
{%- set authorLinks = authorKeys | authorsToLinks(collections.authors) -%}
 | Published by: {{ authorLinks | join(", ") | safe }}
{%- endif %} | Tags: {%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a class="me-2" href="{{ tagUrl }}"> {{ tag }} </a>
{%- endfor %}
</small></p>
<heading-anchors>
{{content|safe}}
</heading-anchors>
<div class="mt-3">
  				{%- if collections.posts %} {%- set previousPost = collections.posts |
				getPreviousCollectionItem %} {%- set nextPost = collections.posts |
				getNextCollectionItem %} {%- if nextPost or previousPost %}
				<div class="d-flex justify-content-between flex-wrap row mt-5 mb-3">
					<div class="mb-2 col-md-6">
                    {%- if previousPost %}
                    <a
						href="{{ previousPost.url }}"
						class="btn btn-dark"
					>
						&larr; Prev Post </a
					>{% endif %}</div>
                    <div class="mb-2 col-md-6 text-end">
                     {%- if nextPost %}
					<a
						href="{{ nextPost.url }}"
						class="btn btn-dark"
					>
						Next Post &rarr; </a
					>{% endif %}
                    </div>
				</div>
				{%- endif %} {%- endif %}
</div>
</div>
</div>
</div>
{% include "partials/widget.njk" %}