        <section id="intro" class="py-5 bg-light">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 rounded p-3">
                        <div class="bgs" style="background-image: url('{{intro.image}}');">
                </div>
                    </div>
                    <div class="col-md-6 p-3">
                        <div class="col-md-10 offset-md-1">
                        <h3 class="mb-4 custom-heading"><strong><a href="{{page.url}}" class="none">{{intro.title}}</a></strong></h3>
                        <p class="custom-text">
                            {{intro.text}}
                        </p>
                        <ul class="list-unstyled custom-check-list mt-3">{% for l in intro.list %}
                            <li><i class="fa-solid fa-circle-check me-2"></i> {{l.text}}</li>{% endfor %}
                        </ul>
                    </div>
                    </div>
                    <div class="col-md-10 mx-auto p-3">{{content|safe}}</div>
                </div>
            </div>
        </section>